{% extends 'admin/base_admin.html.twig' %}

{% block content %}

    <section class="admin__container--form">
        {{ form_start(form, {'attr' : {'enctype':'multipart/form-data','class' : 'users__form', 'action': path('admin_modify_product', {'game': app.request.get('game'), 'platform': app.request.get('platform')})}}) }}

