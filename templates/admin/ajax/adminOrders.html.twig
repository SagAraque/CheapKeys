{% for order in orders.items %}

    <div class="orders__card">
        <div class="card__container">
            <div class="orders__container--row">
                <h2 class="orders__title">Pedido Nº: {{ order.idOrder }}</h2>
                <p class="orders__text">{{ order.orderDate | date('d-m-Y') }}</p>
            </div>
            <div class="orders__container--row">
                <p class="orders__text">{{ order.orderTotal  }}€</p>
                <p class="orders__text">{{ order.idUser.idUser }}. {{ order.idUser.userName }}</p>
            </div>
        </div>
    </div>

{% endfor %}
{% if orders.total != 0 %}
    <div class="reviews__paginator">
    {# Check if last page of paginator is different 1 #}
    {% if orders.lastPage > 1 %}
        <i class="bi bi-chevron-left paginator__button--disabled paginator__button--orders" direction="left"></i>
        <span class="paginator__page">
            Página <span class="paginator__actual">1</span> de <span class="paginator__last">{{ orders.lastPage }}</span>
        </span>
        <i class="bi bi-chevron-right paginator__button paginator__button--orders" direction="right"></i>
    {% endif %}
    </div>
{% endif %}