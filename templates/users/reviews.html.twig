{% extends "users/control_panel.html.twig" %}

{% block content %}
    <h2 class="control__title--primary">Reseñas: {{ reviews.items | length }}</h2>
    <div class="control__reviews">
        {% include "ajax/reviewsUser.html.twig" %}
    </div>

    <div class="reviews__paginator">
        {% if reviews.lastPage > 1 %}
            <i class="bi bi-chevron-left paginator__button--disabled paginator__button--reviewsUser" direction="left"></i>
            <span class="paginator__page">
                Página <span class="paginator__actual">1</span> de <span class="paginator__last">{{ reviews.lastPage }}</span>
            </span>
            <i class="bi bi-chevron-right paginator__button paginator__button--reviewsUser" direction="right"></i>
        {% endif %}
    </div>

{% endblock %}

{% block javascript %}
    <script src="{{ asset('static/javascript/users/data.js') }}"></script>
{% endblock %}