                <li class="header__item"><a href="{{ path('category', { 'data':'playstation' }) }}" class="header__link">PlayStation</a></li>
                <li class="header__item"><a href="{{ path('category', { 'data':'xbox' }) }}" class="header__link">XBOX</a></li>
                <li class="header__item"><a href="{{ path('category', { 'data':'nintendo' }) }}" class="header__link">Nintendo</a></li>
                <li class="header__item"><a href="{{ path('category', { 'data':'ofertas' }) }}" class="header__link">Ofertas</a></li>
                <li class="header__item"><a href="{{ path('category', { 'data':'proximamente' }) }}" class="header__link">Proximamente</a></li>
            </ul>
        </nav>
        <!-- Header nav end -->
    </div>
    <!-- Header bottom container end -->
</header>